<html>
  <head>
    <title>ToDo App By Saad Adam</title>
    <link
      href="https://fonts.googleapis.com/css?family=Lato:100"
      rel="stylesheet"
    />
    <link href="/styles.css" rel="stylesheet" />
  </head>

  <body>
    <div class="container">
      <h1>A Simple ToDo List App Developed from Bitlabs</h1>

      <form action="/addtask" method="POST">
        <input type="text" name="newtask" placeholder="add new task" />
        <button class="btn">Add Task</button> <br /><br />
        <fieldset>
          <h2><legend>Added Task</legend></h2>

          <% for( var i = 0; i < task.length; i++){ %>
          <li>
            <input type="checkbox" name="check" value="<%= task[i] %>" /> <%=
            task[i] %>
          </li>
          <% } %>
        </fieldset>
        </br>
        <button formaction="/removetask" type="submit" id="top" class="btn">Remove</button>
      </form>
      <br /><br />
      <fieldset>
        <h2>Completed task</h2>

        <% for(var i = 0; i < complete.length; i++){ %>
        <li><input type="checkbox" checked /><%= complete[i] %></li>
        <% } %>
      </fieldset>
    </div>
  </body>
</html>
